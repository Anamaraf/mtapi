<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="ILRepacker" AfterTargets="Build" Condition="'$(Configuration)' == 'Debug'">
        <ItemGroup>
            <InputAssemblies Include="$(TargetPath)" />
            <InputAssemblies Include="@..\packages\log4net.2.0.10\lib\net40\log4net.dll" Condition="'%(filename)' == 'log4net'" />
        </ItemGroup>
        <ILRepack AllowDuplicateResources="false" DebugInfo="true" Internalize="true"
                  InputAssemblies="@(InputAssemblies)" OutputFile="$(TargetPath)"
                  Parallel="true" TargetKind="SameAsPrimaryAssembly"
                  KeyFile="MtApiKey.snk" /> <!-- Add your key file path here -->
    </Target>
</Project>